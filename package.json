{
  "name": "graphile-migrate",
  "version": "0.0.5",
  "description": "Opinionated SQL-powered migration tool for PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint 'src/**/*'",
    "lint:fix": "eslint --fix 'src/**/*'",
    "prepack": "tsc && chmod +x dist/cli.js",
    "clean": "rm -Rf dist",
    "test": "jest",
    "watch": "mkdir -p dist && touch dist/cli.js && chmod +x dist/cli.js && tsc --watch"
  },
  "bin": {
    "graphile-migrate": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/graphile/migrate.git"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "pg",
    "migrate",
    "sql",
    "easy",
    "fast",
    "watch",
    "functions"
  ],
  "author": "Benjie Gillam <code@benjiegillam.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/graphile/migrate/issues"
  },
  "homepage": "https://github.com/graphile/migrate#readme",
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^2.1.3",
    "@types/pg": "^7.11.0",
    "chalk": "^2.4.2",
    "chokidar": "^3.0.2",
    "pg": ">=6.5 <8",
    "pg-connection-string": "^2.1.0",
    "pg-minify": "^1.4.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint_d": "^8.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "__tests__/.*\\.test\\.[tj]s$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "files": [
    "dist"
  ]
}
